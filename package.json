{
  "name": "cinematic-story-generator",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest --run --reporter=verbose",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --run --coverage --reporter=verbose",
    "check:health-helper": "node scripts/comfyui-status.ts",
    "check:vitest-subset": "npm test -- --run",
    "check:playwright-svd": "npx playwright test tests/e2e/svd-basic.spec.ts",
    "check:playwright-wan": "npx playwright test tests/e2e/wan-basic.spec.ts",
    "validation:metrics": "node scripts/validation-metrics.ts",
    "watch:validation-history": "node scripts/watch-validation-history.ts",
    "guardian": "node --import tsx agent/index.ts",
    "guardian:start": "node --import tsx agent/index.ts --daemon",
    "guardian:stop": "node --import tsx agent/index.ts --stop",
    "guardian:status": "node --import tsx agent/index.ts --status",
    "guardian:report": "node --import tsx agent/index.ts --report",
    "guardian:queue": "node --import tsx agent/index.ts --process-queue",
    "guardian:scan": "node --import tsx agent/index.ts --scan",
    "guardian:prompts": "node --import tsx agent/index.ts --generate-prompts",
    "guardian:interactive": "node --import tsx agent/index.ts --interactive",
    "guardian:suggest": "node --import tsx agent/index.ts --suggest",
    "guardian:task": "node --import tsx agent/index.ts --task",
    "guardian:e2e-audit": "node --import tsx agent/index.ts --e2e-audit",
    "bookend:similarity": "node --import tsx scripts/bookend-frame-similarity.ts",
    "bookend:e2e": "pwsh -File scripts/test-bookend-e2e.ps1",
    "bookend:sweep": "pwsh -File scripts/wan-parameter-sweep.ps1",
    "bookend:regression": "pwsh -File scripts/test-bookend-regression.ps1",
    "bookend:vision": "pwsh -File scripts/analyze-bookend-vision.ps1",
    "bookend:vision-regression": "npm run bookend:vision && pwsh -File scripts/test-bookend-vision-regression.ps1",
    "bookend:vision-last": "pwsh -File scripts/analyze-last-video.ps1",
    "bookend:vision-qa": "pwsh -File scripts/run-bookend-vision-qa.ps1",
    "bookend:vision-qa:quick": "pwsh -File scripts/run-bookend-vision-qa.ps1 -Runs 1",
    "bookend:vision-qa:publish": "pwsh -File scripts/publish-vision-qa-results.ps1",
    "bookend:vision-qa:check-schema": "pwsh -File scripts/check-vision-qa-schema.ps1",
    "bookend:vision-qa:trend": "pwsh -File scripts/vision-qa-trend-report.ps1",
    "benchmark:video-quality": "npx tsx scripts/benchmarks/video-quality-benchmark.ts",
    "benchmark:video-quality:verbose": "npx tsx scripts/benchmarks/video-quality-benchmark.ts --verbose",
    "check:ffmpeg": "npx tsx scripts/check-ffmpeg.ts",
    "bookend:ci:core": "npx tsc --noEmit && npx vitest run --reporter=verbose && npm run bookend:regression",
    "bookend:ci:vision": "pwsh -File scripts/run-bookend-vision-qa.ps1 -Runs 3",
    "pipeline": "npx tsx scripts/run-pipeline.ts",
    "pipeline:list": "npx tsx scripts/run-pipeline.ts --list",
    "pipeline:production-qa-golden": "npx tsx scripts/run-pipeline.ts --pipeline production-qa-golden",
    "temporal:regularize": "npx tsx scripts/temporal-regularizer.ts",
    "narrative": "npx tsx scripts/run-narrative.ts",
    "narrative:list": "npx tsx scripts/run-narrative.ts --list",
    "narrative:demo": "npx tsx scripts/run-narrative.ts --script config/narrative/demo-three-shot.json",
    "replay:from-manifest": "npx tsx scripts/replay-from-manifest.ts",
    "pipeline:external": "npx ts-node scripts/run-pipeline-external.ts",
    "pipeline:external:check": "npx ts-node scripts/run-pipeline-external.ts --check"
  },
  "dependencies": {
    "@google/genai": "^1.28.0",
    "chokidar": "^4.0.3",
    "commander": "^13.1.0",
    "idb": "^8.0.0",
    "marked": "^16.4.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.14.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/ui": "^4.0.8",
    "fake-indexeddb": "^6.2.5",
    "happy-dom": "^20.0.10",
    "playwright": "^1.56.1",
    "ts-node": "^10.9.1",
    "tsx": "^4.19.4",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vitest": "^4.0.8"
  }
}
